package es.cfc;

public class AppMain {

	public static void main(String[] args) {
		int suma = 0;

		for (String string : args) {
			// Transformar el número en String a un número entero
			try {
				// Aquí colocamos todas las líneas que pueden generar error
				int numero = Integer.parseInt(string);

				suma += numero;	
			} catch (Exception e) {
				System.out.println("Error: " + e.getLocalizedMessage() + " is not int");
				//System.out.println("--- Starting info: ");
				e.printStackTrace();
				//System.out.println("End info ---");
			} finally {
				// Código que se ejecuta siempre, haya o no excepción.
				System.out.println("Subtotal: " + suma);
			}
		}
		
		System.out.println("Total: " + suma);
	}

}
