package es.cfc.business;

import java.util.Arrays;

import es.cfc.models.Carta;
import es.cfc.models.Numero;
import es.cfc.models.Palo;

public class Baraja {

	Carta cartas[] = new Carta[4];
	
	public Baraja() {
		// TODO Auto-generated constructor stub
	}

	public void addCarta(int posicion, Numero numero, Palo palo) {
		cartas[posicion - 1] = new Carta(numero, palo);
	}

	public String verCarta(int posicion) {
		String literal = cartas[posicion - 1];
		return literal;
	}

	public String verCartas() {
		String cartas = "";
		
		for (int i = 0; i < cartas.length(); i++) {
			String carta = verCarta(i);
			if (carta != null) {
				continue;
			}
			cartas = cartas + carta.toString();
		}
		return cartas;
	}

	@Override
	public String toString() {
		return "Baraja [cartas=" + Arrays.toString(cartas) + "]";
	}

}
