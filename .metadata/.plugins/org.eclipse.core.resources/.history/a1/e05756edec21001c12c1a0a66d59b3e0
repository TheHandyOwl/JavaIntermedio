package es.cfc.business;

import java.util.Arrays;

import es.cfc.models.Carta;
import es.cfc.models.Numero;
import es.cfc.models.Palo;

public class Baraja {

	Carta[] mano = new Carta[8];
	
	public Baraja() {
		// TODO Auto-generated constructor stub
	}

	public void addCarta(int posicion, Numero numero, Palo palo) {
		mano[posicion - 1] = new Carta(numero, palo);
	}

	public String verCarta(int posicion) {
		String literal = mano[posicion - 1].toString();
		return literal;
	}

	public String verCartas() {
		String cartas = "";
		
		for (int i = 0; i < cartas.length(); i++) {
			String carta = verCarta(i);
			if (carta == null) {
				continue;
			}
			cartas += carta.toString();
		}
		return cartas;
	}

	@Override
	public String toString() {
		return "La mano es :" + verCartas();
	}

}
