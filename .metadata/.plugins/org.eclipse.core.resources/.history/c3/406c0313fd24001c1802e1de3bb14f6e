package es.cfc;

import es.cfc.models.Producto;

public class AppMain {

	public static void main(String[] args) {
		
		Producto producto1 = new Producto("111222", "Ratón", -33.3, "Trust", "Ratón inalámbrico");
		Producto producto2 = new Producto(null, "Ratón", 33.3, "Trust", "Ratón inalámbrico");
		
		Producto[] productos = new Producto[2];
		productos[0] = producto1;
		productos[1] = producto2;
		
		for (Producto producto : productos) {
			try {
				producto.comprobar();
				System.out.println("Producto ok: " + producto);
			} catch (Exception e) {
				System.out.println("Error: " + e.getLocalizedMessage());
				e.printStackTrace();
			} finally {
				try {
					producto.comprobarPrecio();
				} catch (Exception e) {
					System.out.println("Error: " + e.getLocalizedMessage());
					e.printStackTrace();
				}
			}
			
		}
	}

}
