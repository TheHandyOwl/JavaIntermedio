package es.cfc.models;

import es.cfc.models.itfz.Sonidos;

public class Pajaro extends Animal implements Sonidos {

	private String sonido;
	
	public Pajaro() {
		// TODO Auto-generated constructor stub
		super();
	}
	
	public Pajaro(boolean vive, String nombre, String sonido) {
		super(vive, nombre);
		this.sonido = sonido;
	}

	@Override
	public void asignarSonido(String sonido) {
		// TODO Auto-generated method stub
		this.sonido = sonido;
	}
	
	@Override
	void emitirSonido() {
		System.out.println(sonido);
	}

	@Override
	public String toString() {
		return super.toString() + ", emite el sonido=" + sonido;
	}
	
}
