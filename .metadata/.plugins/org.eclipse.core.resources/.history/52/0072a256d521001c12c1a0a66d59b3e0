package es.cfc.models;

import es.cfc.models.interfaces.Habitat;
import es.cfc.models.interfaces.Tiempo;

public class SerVivo implements Habitat, Tiempo {

	private boolean vive;
	private int year;
	private String habitat;
	
	public SerVivo() {
		// TODO Auto-generated constructor stub
	}

	public SerVivo(boolean vive) {
		super();
		this.vive = vive;
	}

	public boolean isVive() {
		return vive;
	}

	public void setVive(boolean vive) {
		this.vive = vive;
	}
	
		public String getDescripcion() {
		return descripcion;
	}

	public void setDescripcion(String descripcion) {
		this.descripcion = descripcion;
	}

	@Override
	public void esperanzaVida() {
		// TODO Auto-generated method stub
		System.out.println("Tiene una esperanza de vida de " + year + " años");		
	}

	@Override
	public void habitat() {
		// TODO Auto-generated method stub
		System.out.println("Vive en el hábitat: " + habitat);
	}

	@Override
	public String toString() {
		return "vive=" + vive;
	}	
	
}
