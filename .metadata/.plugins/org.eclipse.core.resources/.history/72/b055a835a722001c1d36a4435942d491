package es.cfc;

import es.cfc.business.Agenda;
import es.cfc.models.Amigo;
import es.cfc.models.Contacto;
import es.cfc.models.Profesional;
import es.cfc.models.Sexo;

public class AppMain {

	public static void main(String[] args) {

		// Contactos
		Contacto maria = new Contacto();
		maria.setID(1);
		maria.setNombre("Maria");
		maria.setTelefono(616111111L);
		maria.setSexo(Sexo.M);

		// System.out.println(maria);
		// System.out.println(juan);

		Contacto juan = new Contacto(2, "Juan", 616222222L, Sexo.H);
		Amigo lucas = new Amigo(3, "Lucas", 6163333333L, Sexo.H, "El pato", "5 Noviembre");
		Amigo laura = new Amigo(4, "Laura", 6164444444L, Sexo.M, "Pecas", "12 Octubre");

		Profesional elena = new Profesional(5, "Elena", 616555555L, Sexo.M, "Calderon", "elena@calderon.es");
		Profesional carlos = new Profesional(6, "Carlos", 616666666L, Sexo.H, "HP", "carlos@hp.es");
		Profesional susana = new Profesional(7, "Susana", 616777777L, Sexo.M, "Calderon", "susana@calderon.es");

		/*
		 * Contacto kiko = new Amigo(3, "Francisco", 616333333L, Sexo.H, "Kiko",
		 * "3 de marzo"); objAgenda.agregarContacto(kiko); Contacto paco = new Amigo(4,
		 * "Francisco", 616444444L, Sexo.H, "Paco", "4 de abril");
		 * objAgenda.agregarContacto(paco); Contacto ana = new Profesional(5, "Ana",
		 * 616555555L, Sexo.M, "ana@empresa.es", "Corp");
		 * objAgenda.agregarContacto(ana); Contacto eva = new Profesional(6, "Eva",
		 * 616555555L, Sexo.M, "eva@empresa.es", "Corp");
		 * objAgenda.agregarContacto(eva);
		 * 
		 */
		Agenda objAgenda = new Agenda();

		// Agregar los contactos a la agenda
		objAgenda.agregarContacto(maria);
		objAgenda.agregarContacto(juan);
		objAgenda.agregarContacto(lucas);
		objAgenda.agregarContacto(laura);
		objAgenda.agregarContacto(elena);
		objAgenda.agregarContacto(carlos);
		objAgenda.agregarContacto(susana);

		// Mostrar todos los contactos
		Contacto[] misContactos = objAgenda.verContactos();

		System.out.println("--- Contactos ---");
		for (int i = 0; i < misContactos.length; i++) {
			if (misContactos[i] != null) {
				System.out.println(misContactos[i]);
			}
		}
		
		// Buscar Contacto
		System.out.println("--- Resultado de la búsqueda ---\n" + objAgenda.buscar("Maria"));
		// Buscar Amigo
		System.out.println("--- Resultado de la búsqueda ---\n" + objAgenda.buscar("Lucas"));
		// Buscar Apodo
		System.out.println("--- Resultado de la búsqueda ---\n" + objAgenda.buscar("El pato"));

		Contacto[] contactosCalderon = objAgenda.buscarContactosEnEmpresa("Calderon");
		System.out.println("--- Contactos de empresa: ---");
		for (int i = 0; i < contactosCalderon.length; i++) {
			if (contactosCalderon[i] != null) {
				System.out.println(contactosCalderon[i]);
			}
		}

	}

}
